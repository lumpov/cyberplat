tests_senselock:
	$(CC) $(CFLAGS) /Fetest\test_senselock.exe test_senselock.cpp static\$(LIBNAME).lib $(LIBS)
	$(RM) test_senselock.obj
	cd test
	test_senselock.exe
	$(RM) test_senselock.exe

load:
	$(CC) $(CFLAGS) /Fetest\loadtest.exe loadtest.cpp static\libipriv_ssl_s.lib $(LIBS)
	$(RM) loadtest.obj
	cd test
	loadtest.exe 2000
