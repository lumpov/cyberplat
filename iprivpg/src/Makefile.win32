tests_wincrypt:
	$(CC) $(CFLAGS) /Fetest\test_wincrypt.exe test_wincrypt.cpp static\$(LIBNAME).lib $(LIBS)
	$(RM) test_wincrypt.obj
	cd test
	test_wincrypt.exe
#	$(RM) public_2048.key 
